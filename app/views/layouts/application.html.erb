<!DOCTYPE html>
<html>
  <head>
    <title>GoalsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% current_user && (%>
    <%= current_user.username %>
    <%= button_to 'Sign Out', session_url, method: :delete) %>

    <% flash[:errors] && flash[:errors].each do |e| %>
    <%= e %>
    <br>
    <% end %>
    <%= yield %>
  </body>
</html>
